{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"$server/*": ["src/server/*"]
		  }
	  "module": "es2020",
	  "moduleResolution": "bundler",
	  "allowJs": true,
	  "checkJs": false,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "strict": true
	}
  }
